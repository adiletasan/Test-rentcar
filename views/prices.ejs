<%- include('partials/header') %>
<div class="container my-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <% cars.forEach(car => { %>
            <div class="col">
                <div class="card h-100 position-relative">
                    <button class="btn position-absolute top-3 start-3 p-2 bg-dark bg-opacity-50 rounded-circle border-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-heart" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                        </svg>
                    </button>
                    <img src="/api/placeholder/400/300" class="card-img-top" alt="<%= car.brand %> <%= car.model %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= car.brand %> <%= car.model %></h5>
                        <p class="text-muted mb-2"><%= car.category %></p>
                        
                        <div class="row g-2 text-muted mb-3">
                            <div class="col-6">
                                <div>Год выпуска</div>
                                <div class="text-dark"><%= car.year %></div>
                            </div>
                            <div class="col-6">
                                <div>Привод</div>
                                <div class="text-dark">полный</div>
                            </div>
                            <div class="col-6">
                                <div>Объем двигателя</div>
                                <div class="text-dark"><%= car.specifications.get('engineSize') || '-' %></div>
                            </div>
                            <div class="col-6">
                                <div>Разгон до 100 км/ч, сек</div>
                                <div class="text-dark"><%= car.specifications.get('acceleration') || '-' %></div>
                            </div>
                            <div class="col-6">
                                <div>Мощность, л.с.</div>
                                <div class="text-dark"><%= car.specifications.get('horsepower') || '-' %></div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">от</small>
                                <span class="fs-5 fw-bold"><%= car.dailyRate %> ₸</span>
                                <small class="text-muted">/сут.</small>
                            </div>
                            <a href="/prices/<%= car._id %>" class="btn btn-dark">Заказать</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include('partials/footer') %>